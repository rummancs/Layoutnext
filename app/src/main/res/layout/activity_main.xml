<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="3"
    android:background="#FFFFFF"
    android:padding="8dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_weight="4"
        android:background="#d69b90">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:text="FLAT UI KIT"
            android:textFontWeight="20"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_weight="2">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">
            <TextView
                android:id="@+id/LeftView"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/img01"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/RightView"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:background="@mipmap/img02"
                android:layout_centerVertical="true"
                android:layout_marginTop="4dp"/>
            <TextView
                android:id="@+id/RightRVView"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:background="@mipmap/img03"
                android:layout_centerVertical="true"
                android:layout_marginTop="4dp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_weight="4">

        <TextView
            android:id="@+id/web"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@mipmap/img06"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="2dp"/>
        <TextView
            android:id="@+id/txtsearch"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="@mipmap/img05"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="2dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_weight="4">

        <TextView
            android:id="@+id/playing"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="@mipmap/img06"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="2dp"/>

    </LinearLayout>

</LinearLayout>